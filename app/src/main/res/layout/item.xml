<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linear"
        android:gravity="center"
        android:background="@drawable/iteam_one"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:button="@android:drawable/radiobutton_off_background"
                android:checked="true"
                android:text="C H E S S  B U R G E R"
                android:textColor="@color/black"
                android:fontFamily="@font/ralewaybold"/>
            <TextView
                android:id="@+id/price"
                android:layout_gravity="center"
                android:text="5JD"
                android:fontFamily="@font/ralewaybold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/btn2"
                android:button="@android:drawable/radiobutton_off_background"
                android:textColor="@color/black"
                android:text="@string/m_e_a_l"
                android:fontFamily="@font/ralewaybold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/meal_price"
                android:layout_gravity="center"
                android:text="5JD"
                android:fontFamily="@font/ralewaybold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/linear"
        app:layout_constraintEnd_toEndOf="@+id/linear"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/count"
        android:background="@drawable/poles"
        android:gravity="center">

        <TextView
            android:id="@+id/plus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/minus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <TextView
        android:id="@+id/count"
        android:textSize="25dp"
        android:fontFamily="@font/ralewaybold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintStart_toStartOf="@+id/linear"
        app:layout_constraintEnd_toEndOf="@+id/linear"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>