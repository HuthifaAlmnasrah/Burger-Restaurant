<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/checkout"
    tools:context=".Fragments.CheckFragment">

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/linear"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/iteam_two"
        android:layout_width="400dp"
        android:layout_height="400dp">

        <ImageView
            android:src="@drawable/iburgerlogo"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
        <ImageView
            android:src="@drawable/business_and_finance"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/total"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:text="30 JD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_order"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/iteam_three"
        app:layout_constraintBottom_toBottomOf="@+id/linear"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintEnd_toEndOf="@+id/linear"
        app:layout_constraintStart_toStartOf="@+id/linear"
        android:layout_width="150dp"
        android:layout_height="150dp">

        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:text="@string/o_r_d_e_r_n_o_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>